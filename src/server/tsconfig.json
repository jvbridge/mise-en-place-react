{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "./build",
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "target": "es6",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./**/*.test.ts"]
}
